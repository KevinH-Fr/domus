<div id="<%= dom_id home %>" class="card">
  <div class="card-header">
    <%= home.name %>
  </div>
  <div class="card-body">
    <h5 class="card-title">
    
      <%= home.address %>
      <%= home.city %>
      <%= home.cp %>

    </h5>

    <div class="container d-flex">
      <%= link_to "Editer", edit_home_path(home), class: "btn btn-sm btn-primary me-1" %>
      <%= button_to "Supprimer", home, method: :delete, class: "btn btn-sm btn-danger" %>
    </div>


  </div>
</div>